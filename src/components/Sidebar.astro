---
// src/components/Sidebar.astro
import { Image } from 'astro:assets';
import { urlFor } from '../lib/sanity.ts'; //
// Hem comentat la importació del component de React
// import ThemeToggle from './ThemeToggle.jsx';

const { settings } = Astro.props;
---
<aside class="w-full lg:w-2/5 lg:h-screen lg:sticky top-0 bg-slate-100 p-8 lg:p-16 flex flex-col">
	<div class="absolute top-8 right-8">
        </div>
	<div class="flex flex-col h-full">
		<div>
			{/* ... resta del teu codi del sidebar ... */}
            {settings?.foto && <Image src={urlFor(settings.foto).url()} width={96} height={96} alt={`Foto de ${settings.nom}`} class="h-24 w-24 rounded-full object-cover mb-6 border-4 border-white shadow-lg"/>}
			<h1 class="text-4xl lg:text-5xl font-bold text-slate-900">{settings?.nom}</h1>
			<h2 class="text-xl font-medium text-blue-600 mt-2">{settings?.titol}</h2>
			<p class="text-slate-600 mt-6 max-w-md">{settings?.resumSidebar}</p>
			<nav class="mt-12 hidden lg:flex flex-col gap-1">
				<a href="#experiencia" class="group font-semibold text-slate-600 py-2"><span>Experiència</span></a>
				<a href="#habilitats" class="group font-semibold text-slate-600 py-2"><span>Habilitats</span></a>
				<a href="#formacio" class="group font-semibold text-slate-600 py-2"><span>Formació</span></a>
			</nav>
		</div>
		<div class="mt-8 lg:mt-auto pt-8">
			{/* ... resta del teu codi del sidebar ... */}
            {settings?.cvUrl && <a href={settings.cvUrl} download class="w-full text-center inline-block bg-blue-600 text-white font-bold py-3 px-4 rounded-lg hover:bg-slate-900 transition-all duration-300 transform hover:-translate-y-0.5 shadow-lg hover:shadow-xl"><i class="fa-solid fa-download mr-2"></i>Descarregar CV</a>}
			<div class="mt-8 flex justify-center lg:justify-start gap-6">
				{settings?.linkedinUrl && <a href={settings.linkedinUrl} target="_blank" title="LinkedIn" class="text-slate-500 hover:text-blue-600 text-2xl transition-colors"><i class="fa-brands fa-linkedin"></i></a>}
				{settings?.githubUrl && <a href={settings.githubUrl} target="_blank" title="GitHub" class="text-slate-500 hover:text-slate-900 text-2xl transition-colors"><i class="fa-brands fa-github"></i></a>}
				{settings?.email && <a href={`mailto:${settings.email}`} title="Correu Electrònic" class="text-slate-500 hover:text-blue-600 text-2xl transition-colors"><i class="fa-solid fa-envelope"></i></a>}
			</div>
		</div>
	</div>
</aside>