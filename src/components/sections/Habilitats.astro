---
// src/components/sections/Habilitats.astro
import AnimateOnScroll from '../AnimateOnScroll.jsx'; 
import { ui } from '../../i18n/ui.ts';
import {PuzzlePieceIcon, CommandLineIcon} from '@heroicons/react/24/solid';

const getLangFromUrl = (url: URL) => url.pathname.split('/')[1] || 'ca';
const lang = getLangFromUrl(Astro.url) as keyof typeof ui;
const t = ui[lang];

const { tecniques, clau } = Astro.props;
---

<AnimateOnScroll client:visible triggerOnce={false}>
  <section id="habilitats" class="mb-24 scroll-mt-24">
    <h3 class="text-sm lg:text-base font-semibold uppercase tracking-wide text-slate-500 dark:text-slate-400 mb-8 border-b border-slate-200 dark:border-slate-700 pb-2">{t['nav.skills']}</h3>
    <div class="space-y-12">
      <div>
        <h4 class="text-base font-semibold text-slate-800 dark:text-slate-200 mb-4 flex items-center gap-2">
          <CommandLineIcon className="w-5 h-5 text-slate-400 dark:text-slate-500" /> {t['skills.technical']}
        </h4>
        <ul class="flex flex-wrap gap-2">
          {tecniques?.map((hab) => (
            <li class="rounded-full bg-slate-200 dark:bg-slate-700 px-3 py-1 text-sm font-medium text-slate-800 dark:text-slate-200">{hab.nom}</li>
          ))}
        </ul>
      </div>
      <div>
        <h4 class="text-base font-semibold text-slate-800 dark:text-slate-200 mb-4 flex items-center gap-2">
          <PuzzlePieceIcon className="w-5 h-5 text-slate-400 dark:text-slate-500" /> {t['skills.soft']}
        </h4>        
        <ul class="flex flex-wrap gap-2">
          {clau?.map((hab) => (
            <li class="rounded-full bg-indigo-100 dark:bg-indigo-900/40 px-3 py-1 text-sm font-medium text-indigo-800 dark:text-indigo-300">{hab.nom}</li>
          ))}
        </ul>
      </div>
    </div>
  </section>
</AnimateOnScroll>