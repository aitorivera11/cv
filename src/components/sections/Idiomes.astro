---
import AnimateOnScroll from '../AnimateOnScroll.jsx';
import { ui } from '../../i18n/ui.ts';
import { GlobeAltIcon } from '@heroicons/react/24/solid';
import BarraIdiomes from '../BarraIdiomes.jsx';

const getLangFromUrl = (url: URL) => url.pathname.split('/')[1] || 'ca';
const lang = getLangFromUrl(Astro.url) as keyof typeof ui;
const t = ui[lang];

const idiomes = [
  { nom: t['languages.catalan'], nivell: t['languages.native'], percent: 100 },
  { nom: t['languages.spanish'], nivell: t['languages.native'], percent: 100 },
  { nom: t['languages.english'], nivell: t['languages.basic'], percent: 30 },
];
---
<AnimateOnScroll client:visible triggerOnce={false}>
  <section id="idiomes" class="mb-24 scroll-mt-24">
    <h3 class="text-sm lg:text-base font-semibold uppercase tracking-wide text-slate-500 dark:text-slate-400 mb-8 border-b border-slate-200 dark:border-slate-700 pb-2">
      {t['nav.languages']}
    </h3>
    <ul class="space-y-4">
      {idiomes.map((lang, i) => (
        <li 
          key={lang.nom}
          class={`flex items-center gap-4 opacity-0 translate-x-8 animate-slide-in`} 
          style={`animation-delay: ${i * 0.2}s`}
        >
          <span class="flex items-center w-28 font-medium text-slate-800 dark:text-slate-200 group">
            <GlobeAltIcon className="w-4 h-4 mr-2 text-slate-400 dark:text-slate-500 group-hover:rotate-12 transition-transform duration-300" />
            {lang.nom}
          </span>
          <div class="flex-1 bg-slate-200 dark:bg-slate-700 rounded-full h-2 relative overflow-visible">
            <BarraIdiomes client:visible percent={lang.percent}>
              {lang.percent < 100 && (
                <span class="absolute right-2 -top-6 text-xs text-indigo-700 bg-white/90 px-1 rounded shadow">
                  {lang.percent}%
                </span>
              )}
            </BarraIdiomes>
          </div>
          <span class="w-20 text-sm text-slate-500 dark:text-slate-400 text-right group relative cursor-pointer">
            {lang.nivell}
            <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-1 px-2 py-1 rounded bg-indigo-600 text-white text-xs opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none z-10">
              {lang.percent}%
            </span>
          </span>
        </li>
      ))}
    </ul>
  </section>
</AnimateOnScroll>
