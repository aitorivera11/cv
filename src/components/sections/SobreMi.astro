---
// src/components/sections/SobreMi.astro
import AnimateOnScroll from '../AnimateOnScroll.jsx'; 
import { ui } from '../../i18n/ui.ts';

const getLangFromUrl = (url: URL) => url.pathname.split('/')[1] || 'ca';
const lang = getLangFromUrl(Astro.url) as keyof typeof ui;
const t = ui[lang];

const { sobremi } = Astro.props;
---

<AnimateOnScroll client:visible triggerOnce={false}>
  <section id="sobre-mi" class="mb-24 scroll-mt-24">
    <h3 class="text-xs font-bold uppercase tracking-[0.2em] text-slate-500 dark:text-slate-400 mb-10">{t['nav.about']}</h3>
    <p class="text-base leading-relaxed text-slate-700 dark:text-slate-300">
      {sobremi}    
    </p>
  </section>
</AnimateOnScroll>
