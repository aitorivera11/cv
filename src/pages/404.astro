---
import Layout from '../layouts/Layout.astro';
import { ui } from '../i18n/ui.ts';
import Escape404 from '../components/Escape404.jsx';

const lang = Astro.currentLocale || 'ca';
const t = ui[lang];
const homePath = lang === 'ca' ? '/' : `/${lang}`;
---

<Layout title="404" description="Page not found" lang={lang}>
  <main class="min-h-screen flex flex-col items-center justify-center text-center p-8 gap-6">
    <Escape404 t={t} homePath={homePath} />
  </main>
</Layout>
