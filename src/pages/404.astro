---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const homePath = lang === 'ca' ? '/' : `/${lang}`;
---
<Layout title="404" description="Page not found" lang={lang}>
  <main class="min-h-screen flex flex-col items-center justify-center text-center p-8 gap-6">
    <h1 class="text-5xl font-bold">{t['404.title']}</h1>
    <p>{t['404.message']}</p>
    <a href={homePath} class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-500">{t['404.backHome']}</a>
  </main>
</Layout>
